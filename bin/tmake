#!/bin/sh

DIR=`pwd`
tmux has-session -t build 2>/dev/null || tmux new -s build -d -c $DIR

if [ $# -ne 0 ]; then
if [ $1 = "new" ]; then
	# useless
	tmux send-keys -t build "cd $DIR
	"
	shift
fi
if [ $1 = "bear" ]; then
	OPTS="bear"
	shift
fi
fi

tmux send-keys -t build "clear && make-and-notify $OPTS $@
"
